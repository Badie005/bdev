{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "console_title_template": "{{ .Folder }} - B.DEV",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#61AFEF",
                    "template": "B.DEV "
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#ABB2BF",
                    "properties": {
                        "style": "agnoster_short",
                        "max_depth": 3
                    },
                    "template": "{{ .Path }}"
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#98C379",
                    "foreground_templates": [
                        "{{ if gt .Ahead 0 }}#C678DD{{ end }}",
                        "{{ if gt .Behind 0 }}#E5C07B{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#E06C75{{ end }}"
                    ],
                    "properties": {
                        "branch_icon": " ",
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "template": " {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} 󰏫 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "node",
                    "style": "plain",
                    "foreground": "#6DA35E",
                    "properties": {
                        "fetch_version": true
                    },
                    "template": " {{ .Full }}"
                },
                {
                    "type": "python",
                    "style": "plain",
                    "foreground": "#FFD43B",
                    "properties": {
                        "fetch_virtual_env": true
                    },
                    "template": " {{ if .Venv }}{{ .Venv }}{{ else }}{{ .Full }}{{ end }}"
                },
                {
                    "type": "php",
                    "style": "plain",
                    "foreground": "#787CB5",
                    "template": " {{ .Full }}"
                },
                {
                    "type": "executiontime",
                    "style": "plain",
                    "foreground": "#E5C07B",
                    "properties": {
                        "threshold": 500,
                        "style": "austin"
                    },
                    "template": " {{ .FormattedMs }}"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#E06C75{{ else }}#C678DD{{ end }}"
                    ],
                    "template": "❯ "
                }
            ]
        }
    ],
    "secondary_prompt": {
        "foreground": "#ABB2BF",
        "template": "  ❯❯ "
    },
    "transient_prompt": {
        "foreground": "#61AFEF",
        "template": "❯ "
    }
}